<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gbrenegadzdev.financeassistant">

    <dist:module dist:instant="true" />

    <application
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_myfa"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.ExpenseActivity"
            android:label="@string/expense"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.MainActivity" />
        </activity>
        <activity
            android:name=".activities.IncomeActivity"
            android:label="@string/income"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SetupCategoryActivity"
            android:label="@string/category"
            android:parentActivityName=".activities.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.activities.SettingsActivity" />
        </activity>
        <activity
            android:name=".activities.SetupSalaryDeductionActivity"
            android:label="@string/setup_salary_deduction"
            android:parentActivityName=".activities.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.activities.SettingsActivity" />
        </activity>
        <activity
            android:name=".activities.BudgetActivity"
            android:label="@string/title_activity_budget"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SettingsActivity2"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gbrenegadzdev.financeassistant.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
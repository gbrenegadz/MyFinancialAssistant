<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.IncomeActivity"
    tools:showIn="@layout/activity_income">

    <com.github.badoualy.datepicker.DatePickerTimeline
        android:id="@+id/date_picket_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_month" />

    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp28"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="@string/zero"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_h6"
        android:textStyle="bold"
        android:gravity="start|center"
        app:layout_constraintEnd_toStartOf="@+id/txt_total_today"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_picket_time_line"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/txt_total_month"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp28"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="end|center"
        android:text="@string/zero"
        android:textColor="@color/mti_default_primary_dark"
        android:textSize="@dimen/text_h6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/date_picket_time_line"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp28"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/slash"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="end|center"
        android:textSize="@dimen/text_h6"
        app:layout_constraintEnd_toStartOf="@+id/txt_total_month"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_total_today"
        app:layout_constraintTop_toBottomOf="@+id/date_picket_time_line"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/txt_total_today"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp28"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="end|center"
        android:text="@string/zero"
        android:textColor="@color/mti_default_primary"
        android:textSize="@dimen/text_h6"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_total_amount"
        app:layout_constraintTop_toBottomOf="@+id/date_picket_time_line"
        tools:targetApi="o" />
</androidx.constraintlayout.widget.ConstraintLayout>